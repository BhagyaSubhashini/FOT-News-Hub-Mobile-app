<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#431DC5">

    <!-- Top bar with icons and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/account"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/account"
            android:contentDescription="Profile Icon"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FOT News Hub"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/settings"
            android:layout_width="28dp"
            android:layout_height="22dp"
            android:layout_marginStart="12dp"
            android:contentDescription="Settings Icon"
            android:src="@drawable/settings" />
    </LinearLayout>


    <!-- Scrollable news content -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="325dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/searchbar3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First News Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#693EFE"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:layout_margin="8dp"
                android:backgroundTint="#693EFE"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/topicEvents1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Coding Hackathon Kicks Off This Weekend ! Registrations are open"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/dateEvents1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date : May 05, 2025"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:paddingBottom="8dp" />

                <ImageView
                    android:id="@+id/picEvents1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Hack News"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hacker" />

                <TextView
                    android:id="@+id/descriptionEvents1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The annual HackTheCode hackathon will be held on May 3–4, with teams of 3–5 competing for prizes worth LKR 100,000+. Registrations ......see more"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />
            </LinearLayout>

            <!-- Second News Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#693EFE"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:layout_margin="8dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/topicEvents2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ICT Day 2025 Scheduled for June 20"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/dateEvents2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date : May 03, 2025"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:paddingBottom="8dp" />

                <ImageView
                    android:id="@+id/picEvents2"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:contentDescription="ICT day News"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ict_day" />

                <TextView
                    android:id="@+id/descriptionEvents2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ICT Day 2025 will feature tech exhibitions, industry guest speakers (including alumni from top tech companies), and student project showcases ......see more"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#693EFE"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/sportsicon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/sports1"
            android:contentDescription="Trophy" />

        <ImageView
            android:id="@+id/academicsicon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/academics1"
            android:contentDescription="Graduation" />

        <ImageView
            android:id="@+id/eventsicon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/events2"
            android:contentDescription="Calendar" />
    </LinearLayout>
</LinearLayout>
