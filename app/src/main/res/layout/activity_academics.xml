<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4703D1">

    <!-- Top bar with icons and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/account"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/account"
            android:contentDescription="Profile Icon"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="FOT News Hub"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/settings"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/settings"
            android:contentDescription="Settings Icon"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- Search bar -->


    <!-- Scrollable news content -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="325dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/searchbar2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- First News Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#693EFE"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:layout_margin="8dp"
                android:backgroundTint="#693EFE"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/topicAcademics1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="University of Colombo Introduces AI in Curriculum"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/dateAcademics1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date : May 04, 2025"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:paddingBottom="8dp" />

                <ImageView
                    android:id="@+id/picAcademics1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Ai News"
                    android:scaleType="centerCrop"
                    android:src="@drawable/techimg" />

                <TextView
                    android:id="@+id/descriptionAcademics1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Department of ICT at the University of Colombo has launched new modules focusing on Artificial Intelligence and Machine Learning ........see more"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />
            </LinearLayout>

            <!-- Second News Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#693EFE"
                android:layout_marginBottom="12dp"
                android:padding="12dp"
                android:layout_margin="8dp"
                android:elevation="2dp">

                <TextView
                    android:id="@+id/topicAcademics2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Free Online Workshops on Data Science"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/dateAcademics2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date : May 02, 2025"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:paddingBottom="8dp" />

                <ImageView
                    android:id="@+id/picAcademics2"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:contentDescription="Class News"
                    android:scaleType="centerCrop"
                    android:src="@drawable/classroom" />

                <TextView
                    android:id="@+id/descriptionAcademics2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Universityâ€™s Data Science Club will host weekly online workshops covering Python, pandas, and data visualization using Tableau. All students are welcome. Participation certificates will ....see more"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#693EFE"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:weightSum="3">

        <ImageView
            android:id="@+id/sportsicon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/sports1"
            android:contentDescription="Trophy" />

        <ImageView
            android:id="@+id/academicsicon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/academics2"
            android:contentDescription="Graduation" />

        <ImageView
            android:id="@+id/eventsicon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/events1"
            android:contentDescription="Calendar" />
    </LinearLayout>
</LinearLayout>
